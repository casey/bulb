#!/usr/bin/env bash

set -euxo pipefail

cargo build --release

host=bulb.tulip.farm
bin=target/release/bulb
timestamp=`date +%s`
revision=`git rev-parse --verify HEAD`
hash=`shasum -a 256 $bin | awk '{print $1}'`
slug=$timestamp-$revision-$hash
dir=tmp/$slug
mkdir -p $dir

cp $bin $dir
ssh -o StrictHostKeyChecking=no bulb@$host mkdir -p deploy
scp -o StrictHostKeyChecking=no -r $dir bulb@$host:deploy/$slug

ssh -o StrictHostKeyChecking=no bulb@$host << EOF

set -euxo pipefail

chmod +x deploy/$slug/bulb
mkdir -p bin
rm -f bin/bulb
ln -s ~/deploy/$slug/bulb bin/bulb

sudo systemctl restart bulb.service

sudo systemctl status bulb.service || true

EOF
