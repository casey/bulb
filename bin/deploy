#!/usr/bin/env bash

set -euxo pipefail

cargo build --release

host=bulb.tulip.farm
bin=target/release/bulb
timestamp=`date +%s`
revision=`git rev-parse --verify HEAD`
hash=`shasum -a 256 $bin | awk '{print $1}'`
slug=$timestamp-$revision-$hash
dir=tmp/$slug
mkdir -p $dir
cp $bin $dir

ping6 -c 1 $host

ssh -6 bulb@$host mkdir -p deploy

scp -6 -r $dir bulb@$host:deploy/$slug

ssh -6 bulb@$host << EOF

set -euxo pipefail

chmod +x deploy/$slug/bulb
mkdir -p bin
rm -f bin/bulb
ln -s ~/deploy/$slug/bulb bin/bulb
sudo systemctl restart bulb.service

EOF
